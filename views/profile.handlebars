<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-description">Description:</label>
        <textarea class="form-input" id="post-description" name="post-description"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  
  <div class="col-md-6" id="delete_button">
    <h3>Current Posts:</h3>

    {{#if posts.length}}

      {{#each posts as |post|}}
      <div class="row mb-2">
        <div class="col-md-6">
          <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
        </div>
        <div class="col-md-3" id="update_button">
          <button class="btn btn-sm btn-warning" data-id="{{post.id}}">UPDATE</button>
        </div>
        <div class="col-md-3">
          <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
  
    {{/if}}
  </div>
</div>

<script src="./js/profile.js"></script>
